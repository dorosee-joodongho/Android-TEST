<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경 색상 -->
    <solid android:color="@android:color/white" />

    <!-- 모서리 둥글게 처리 -->
    <corners android:radius="16dp" />

    <!-- 그림자 효과 -->
    <padding
            android:left="8dp"
            android:top="8dp"
            android:right="8dp"
            android:bottom="8dp" />

    <!-- 외곽선 -->
    <stroke
            android:width="1dp"
            android:color="@android:color/darker_gray" />
</shape>
