<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/transparent">

    <!-- 상단 제목 -->
    <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세 주문내역"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="4dp"
            android:textColor="#000000"
            android:layout_gravity="center" /> <!-- 중앙 정렬 -->

    <!-- 주문 상태 -->
    <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="접수 완료"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:layout_gravity="center" />

    <!-- 주문 항목들을 포함하는 LinearLayout -->
    <LinearLayout
            android:id="@+id/orderItemsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:layout_marginTop="16dp"> <!-- 상단 여백을 16dp로 설정 -->
        <!-- 여기서 항목을 동적으로 추가할 예정 -->
    </LinearLayout>


    <!-- 총 결제 금액 -->
    <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 결제금액: 23,000원"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:textColor="#000000"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"
    />

    <!-- 추가 정보 -->
    <TextView
            android:id="@+id/tvStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가게명: 중국집"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:textColor="#333333"
            android:layout_gravity="right" />

    <TextView
            android:id="@+id/tvOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문일시: 2024-10-01 13:40"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:textColor="#333333"
            android:layout_gravity="right" />

    <!-- 예상 시간 및 혼잡도 -->
    <TextView
            android:id="@+id/tvEstimatedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예상 시간: 35분"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:textColor="#333333"
            android:layout_gravity="right" />

    <TextView
            android:id="@+id/tvCrowdLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="혼잡도: 쾌적"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:textColor="#333333"
            android:layout_gravity="right" />

</LinearLayout>
